@model List<FirstWeb.Models.DTO.PetViewModel>

<h1>List of Pets</h1>

<div class="mb-3">
    <a href="@Url.Action("PetPrint", "Pet")" class="btn btn-primary">All Pets</a>
    <a href="@Url.Action("PetPrint", "Pet", new { species = "Cat" })" class="btn btn-primary">Cats</a>
    <a href="@Url.Action("PetPrint", "Pet", new { species = "Dog" })" class="btn btn-primary">Dogs</a>
</div>

<div class="mb-3">
    <a href="@Url.Action("PetPrint", "Pet")" class="btn btn-secondary">All Foods</a>
    <a href="@Url.Action("PetPrint", "Pet", new { foodName = "Cats Food" })" class="btn btn-secondary">Cats Food</a>
    <a href="@Url.Action("PetPrint", "Pet", new { foodName = "Dogs Food" })" class="btn btn-secondary">Dogs Food</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Species</th>
            <th>Food</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pet in Model)
        {
            <tr>
                <td>@pet.Id</td>
                <td>@pet.Name</td>
                <td>@pet.Age</td>
                <td>@pet.Species</td>
                <td>
                    @foreach (var food in pet.Foods)
                    {
                        <span>@food.Name (@food.Name)</span><br />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>